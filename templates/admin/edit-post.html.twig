{% extends 'admin/base.html.twig' %}

{% block main %}

    <main>
        
        <h2 class="main-title">Edit Post</h2>

       {{form_start(form, {'attr': {'novalidate':'novalidate', 'class': 'edit-family-form'}})}}
                {{form_widget(form.subject, {'attr': {'class': 'edit-family-form-field'}})}}
                {{form_widget(form.content, {'attr': {'class': 'edit-family-form-field'}})}}
                
                {% if editPost.imageFileName == null %}
                    {{form_row(form.image, {'label': 'Add Image'})}}
                    <img  class="timeline-post-image" src="" alt="">
                {% else %}
                    {{form_row(form.image, {'label': 'Edit Image'})}}
                    <img  class="timeline-post-image" src="{{asset('assets/img/posts/' ~ editPost.imageFileName)}}" alt="">
                {% endif %}
                
                {{form_widget(form.Update, {'attr': {'class': 'edit-family-form-button'}})}}
                
        <div class="form-errors">
            
                {{form_errors(form.subject)}}
                {{form_errors(form.content)}}
            
            </div>

        {{form_end(form)}}

    </main>

{% endblock %}