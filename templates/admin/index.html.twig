{% extends 'admin/base.html.twig' %}

{% block main %}

    <main>
        
        {% if not is_granted('ROLE_ADMIN') %}

            {{render(controller("App\\Controller\\AdminController::specificChild"))}}

            <div class="family-portal-container">
                <a class="family-portal-container-options" href="{{path('policies')}}"><i class="far fa-file-pdf fa-2x"></i><p>Documents & Policies</p></a>
                <a class="family-portal-container-options" href="{{path('contact')}}"><i class="far fa-envelope fa-2x"></i><p>Contact Susie</p></a>    
            </div>

        {% else %}
            <h1 class="main-title">My Families</h1>
                {{render(controller("App\\Controller\\AdminController::families"))}}
            <a href="{{path('new_user')}}" class="add-new-button"><i class="fas fa-plus-circle"></i><h4>ADD USER</h4></a>

            <h1 class="main-title">My Policies</h1>
                {{render(controller("App\\Controller\\AdminController::policies"))}}
            <a href="{{path('new_policy')}}" class="add-new-button"><i class="far fa-file-pdf"></i><h4>ADD POLICY</h4></a>

        {% endif %}

    </main>

{% endblock %}